            "required": [
                "default"
            ],
            "properties": {
                "default": {
                    "$id": "#/properties/rangeExtensionType/properties/default",
                    "type": "string",
                    "title": "The default schema",
                    "description": "TODO: enums here ... An explanation about the purpose of this instance.",
