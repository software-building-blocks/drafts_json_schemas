                                "title": "The captures schema",
                                "description": "An explanation about the purpose of this instance.",
                                "default": {},
                                "examples": [
                                    {
                                        "1": {
                                            "scope": "markup"
                                        },
                                        "2": {
                                            "scope": "text.header, color.accent01"
                                        }
                                    }
                                ],
                                "patternProperties": {
                                    "^\\d+$": {
